<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style2.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>SIGNUP</title>
</head>
<body>
    <section class="container">
        <div class="form login">
            <div class="form-content">
                <header>Signup</header>
                <form action="/signup" method="post">
                    <div class="info">
                        <input 
                            type="email" 
                            placeholder="Email" 
                            class="input" 
                            name="email" 
                        />
                    </div>
                    <div class="info">
                        <input 
                            id="password" 
                            type="password" 
                            placeholder="Vui lòng nhập mật khẩu" 
                            class="password"
                            name="password" 
                        />
                        <div onclick="togglePassword('password')">
                            <i class='bx bx-hide eye-icon'></i>
                        </div>
                    </div>
                    <div class="info">
                        <input 
                            id="confirmPassword"
                            type="password" 
                            placeholder="Vui lòng nhập mật khẩu" 
                            class="password" 
                            name="confirmPassword"
                        />
                        <div onclick="togglePassword('confirmPassword')">
                            <i class='bx bx-hide eye-icon'></i>
                        </div>
                    </div>
                    <% if (typeof message !=='undefined' ) { %>
                        <p style="color: red; margin-top: 10px; text-align: center;">
                            <%= message %>
                        </p>
                    <% } %>
                    <div class="info button">
                        <button type="submit">Signup</button>
                    </div>
                </form>

                <div class="form-link">
                    <span>Already have an account? <a href="" class="link signup-link">Login</a></span>
                </div>
            </div>

            <div class="line"></div>

            <div class="social-link">
                <a href="#" class="info facebook">
                    <i class='bx bxl-facebook facebook-icon'></i>
                    <span>Login with Facebook</span>
                </a>
            </div>

            <div class="social-link">
                <a href="#" class="info google">
                    <i class="fa-brands fa-google"></i>
                    <span>Login with Google</span>
                </a>
            </div>

        </div>
    </section>
    <script>
        function togglePassword(id) {
            const password = document.getElementById(id);
            if (password.type === "password") {
                password.type = "text";
            } else {
                password.type = "password";
            }
        }
    </script>
</body>

</html>