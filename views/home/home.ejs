<div id="banner-home">
    <div style="position: relative;">
        <div class="content">
            <p style="font-size: 60px;">Khách sạn</p>
            <p style="font-size: 20px;">Lưu lại các điểm đến trong mơ và khám phá những hoạt động độc đáo nhất</p>
        </div>
        <div class="banner-container">
            <img src="https://res.klook.com/image/upload/v1670396889/chvnwkuco13yi2b2uyad.png" id="banner" width="100%" height="300px"></img>
        </div>
    </div>
    <div id="form-booking">
        <div class="row" style="padding: 16px;">
            <div class="col-sm-3">
                <div class="booking-content bg-hover">
                    <div style="color: #757575;">Điểm đến</div>
                    <input type="text" placeholder="Điền vào đây...">
                </div>
            </div>
            <div class="col-sm-4">
                <div class="booking-content bg-hover">
                    <div class="row">
                        <div class="col-sm-6">
                            <div style="color: #757575;">Ngày đặt</div>
                            <input type="date" placeholder="Điền vào đây...">
                        </div>
                        <div class="col-sm-6">
                            <div style="color: #757575;">Ngày trả</div>
                            <input type="date" placeholder="Điền vào đây...">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="booking-content bg-hover">
                    <div style="color: #757575;">Số người</div>
                    <input type="number" placeholder="Điền vào đây...">
                </div>
            </div>
            <div class="col-sm-2">
                <div class="booking-content"
                    style="background: #ff5b00; color: white; font-size: 22px; font-weight: 600; text-align: center;">
                    <div>Tìm kiếm</div>
                </div>
            </div>
        </div>
    </div>
    <div id="slide-category" style="margin-bottom: 40px;">
        <h2 style="margin-left: 60px;">Nghỉ dưỡng với gói ưu đãi</h2>
        <div id="swiper-category" class="swiper">
            <div class="swiper-wrapper">
                <% category.map((item)=> { %>
                    <div class="swiper-slide">
                        <img src="<%= item.banner %>" width="160px" height="200px"
                            style="border-radius: 10px; border: 1px solid rgb(151, 150, 150);" />
                        <h3 style="position: absolute; bottom: 10px; color: white; left: 40px; font-weight: 600;">
                            <%= item.tilte %>
                        </h3>
                    </div>
                <% }) %>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
    <div id="slide-product" style="margin-bottom: 40px;">
        <h2 style="margin-left: 60px;">Các nơi lưu trú nổi bật</h2>
        <div id="swiper-products" class="swiper">
            <div class="swiper-wrapper">
                <% products.map((item)=> { %>
                    <a href="/product/<%= item.id %>" style="color: black; text-decoration: none;">
                        <div class="card" style="margin-left: 20px; border-radius: 8px;">
                            <img style="width: 200px; height: 200px;" class="card-img-top" src="<%= item.banner %>" alt="Card image">
                            <div class="card-body">
                                <h3 style="font-size: 20px; font-weight: 600;">
                                    <%= item.title %>
                                </h3>
                                <div>từ
                                    <span style="color: #ff5b00; font-weight: 600; font-size: 18px;">
                                        <%= item.price %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                <% }) %>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
<script>
    var swiperCategory = new Swiper('#swiper-category', {
        slidesPerView: 6,
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
    });
    var swiperProducts = new Swiper('#swiper-products', {
            slidesPerView: 6,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
</script>